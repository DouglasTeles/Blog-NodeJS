<h2>Lista de Postagens</h2>
<br>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>descricao: {{descricao}}</small><br>
            
            <small>categoria: {{categoria.nome}}</small><br>
            <small>Data de criação: {{data}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success" >Editar Postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger" >Deletar Postagem</button></a>
        </div>
    </div>

        
{{else}}
<h4 class="mt 4">Nenhuma postagem registrada</h4>
{{/each}}